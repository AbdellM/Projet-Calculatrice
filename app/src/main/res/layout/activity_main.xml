<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <EditText
            android:id="@+id/ecran"
            android:layout_width="415dp"
            android:layout_height="368dp"
            android:ems="20"
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="end" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <LinearLayout
            android:layout_width="413dp"
            android:layout_height="252dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ecran">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/surX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="4"
                    android:text="1/X"
                    android:onClick="operation"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D0CECE" android:autoText="false"/>
            <Button
                    android:id="@+id/cos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="4"
                    android:text="COS"
                    android:onClick="operation"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#774CAF50" android:autoText="false"/>

            <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="5"
                    android:text="SIN"
                    android:onClick="operation"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#774CAF50" android:autoText="false"/>

            <Button
                    android:id="@+id/tan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="6"
                    android:text="TAN"
                    android:onClick="operation"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#774CAF50" android:autoText="false"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="sevenOnClick"
                    android:tag="7"
                    android:text="7"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8"
                    android:onClick="chiffre"
                    android:tag="8"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="9"
                    android:onClick="chiffre"
                    android:text="9"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="effacer"
                    android:text="CE"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:targetApi="ice_cream_sandwich" android:background="#FFE699"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:onClick="chiffre"
                    android:tag="4"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:onClick="chiffre"
                    android:tag="5"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6"
                    android:onClick="chiffre"
                    android:tag="6"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="operation"
                    android:tag="3"
                    android:text="X"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:targetApi="ice_cream_sandwich"
                    tools:ignore="NewApi" android:background="#FFF2CC"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:onClick="chiffre"
                    android:tag="1"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:onClick="chiffre"
                    android:tag="2"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:onClick="chiffre"
                    android:tag="3"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="operation"
                    android:tag="2"
                    android:text="/"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#FFF2CC"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:onClick="chiffre"
                    android:tag="0"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#D9E1F2"/>

            <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="egal"
                    android:text="="
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#FFE699"/>

            <Button
                    android:id="@+id/button15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="operation"
                    android:tag="0"
                    android:text="+"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#FFF2CC"/>

            <Button
                    android:id="@+id/button16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="operation"
                    android:tag="1"
                    android:text="-"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="18sp"
                    android:textStyle="bold" android:background="#FFF2CC"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>